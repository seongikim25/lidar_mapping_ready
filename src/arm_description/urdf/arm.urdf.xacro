<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="arm_5dof">

  <xacro:property name="link_radius" value="0.02"/>
  <xacro:property name="link1_length" value="0.10"/>
  <xacro:property name="link2_length" value="0.12"/>
  <xacro:property name="link3_length" value="0.10"/>
  <xacro:property name="link4_length" value="0.08"/>

  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.04"/>
      </geometry>
    </visual>
  </link>

  <link name="link1">
    <visual>
      <geometry>
        <cylinder length="${link1_length}" radius="${link_radius}"/>
      </geometry>
    </visual>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.01" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="link2">
    <visual>
      <geometry>
        <cylinder length="${link2_length}" radius="${link_radius}"/>
      </geometry>
    </visual>
  </link>

  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 ${link1_length}" rpy="0 0 0"/>
    <axis xyz="0 -1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="link3">
    <visual>
      <geometry>
        <cylinder length="${link3_length}" radius="${link_radius}"/>
      </geometry>
    </visual>
  </link>

  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0 0 ${link2_length}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="link4">
    <visual>
      <geometry>
        <cylinder length="${link4_length}" radius="${link_radius}"/>
      </geometry>
    </visual>
  </link>

  <joint name="joint4" type="revolute">
    <parent link="link3"/>
    <child link="link4"/>
    <origin xyz="0 0 ${link3_length}" rpy="0 0 0"/>
    <axis xyz="0 -1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="gripper_link">
    <visual>
      <geometry>
        <box size="0.04 0.02 0.02"/>
      </geometry>
    </visual>
  </link>

  <joint name="joint5" type="revolute">
    <parent link="link4"/>
    <child link="gripper_link"/>
    <origin xyz="0 0 ${link4_length}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="0.8" effort="0.5" velocity="0.5"/>
  </joint>

</robot>

